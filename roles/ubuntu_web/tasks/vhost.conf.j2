<VirtualHost *:80>
    ServerName {{ server_name }}
    DocumentRoot /var/www/{{ server_name }}

    <Directory /var/www/{{ server_name }}>
        AllowOverride All
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/{{ server_name }}_error.log
    CustomLog ${APACHE_LOG_DIR}/{{ server_name }}_access.log combined
</VirtualHost>
